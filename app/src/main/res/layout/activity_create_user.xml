<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/txtview_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login:"
            android:paddingLeft="40dp"/>

        <EditText
            android:id="@+id/register_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtview_usuario"
            android:layout_marginTop="5dp"
            android:hint="Digite aqui seu login"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_email_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_login"
            android:layout_marginTop="10dp"
            android:text="Email:"
            android:paddingLeft="40dp"/>

        <EditText
            android:id="@+id/register_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_email_header"
            android:layout_marginTop="5dp"
            android:hint="email@dominio.com"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txt_nome_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_email"
            android:layout_marginTop="10dp"
            android:text="Nome:"
            android:paddingLeft="40dp"/>

        <EditText
            android:id="@+id/register_nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_nome_header"
            android:layout_marginTop="5dp"
            android:hint="Digite aqui seu nome"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/txtview_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_nome"
            android:layout_marginTop="10dp"
            android:text="Senha:"
            android:paddingLeft="40dp"/>

        <EditText
            android:id="@+id/register_senha"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtview_senha"
            android:layout_marginTop="5dp"
            android:hint="Digite aqui sua senha"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/register_senha"
            android:text="Criar conta"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

</RelativeLayout>