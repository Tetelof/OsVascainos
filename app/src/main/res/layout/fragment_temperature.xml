<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.potencia.PotenciaFragment">
    <TextView
        android:id="@+id/currentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPD - 01"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/temperatura_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura:"
        android:textSize="20sp"
        android:layout_below="@+id/currentUser"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/temperatura_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/temperatura_txt"
        android:layout_below="@+id/currentUser"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/umidade_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umidade:"
        android:textSize="20sp"
        android:layout_below="@+id/temperatura_txt"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/umidade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/umidade_txt"
        android:layout_below="@+id/temperatura_txt"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>